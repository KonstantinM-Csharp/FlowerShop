<UserControl x:Class="FlowerShop.UI.UC.CheckItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowerShop.UI.UC"
             mc:Ignorable="d" Height="26">

    <StackPanel
                        Orientation="Horizontal" >
        <TextBlock Name="NameOrder"
                           Text="{Binding Bouquet.Name}" 
                           FontWeight="Bold" 
                           FontSize="16"/>

        <TextBlock Text="{Binding Quantity}"
                           TextWrapping="Wrap" Width="69" />

        <TextBlock Text="{Binding Cost}"
                           TextWrapping="Wrap"  Width="93"/>

        <TextBlock Text="{Binding Price}"
                           TextWrapping="Wrap"  Width="93"/>

    </StackPanel>
</UserControl>
