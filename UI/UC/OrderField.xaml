<UserControl x:Class="FlowerShop.UI.UC.OrderField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowerShop.UI.UC"
             mc:Ignorable="d" 
             Height="82.42" 
             Width="488.946" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Border BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="5" 
            Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"></ColumnDefinition>
                <ColumnDefinition  Width="2*"></ColumnDefinition>
                <ColumnDefinition  Width="*"></ColumnDefinition>
                <ColumnDefinition  Width="*"></ColumnDefinition>
                <ColumnDefinition  Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Name="NameOrder"
                        Text="{Binding Id}" 
                        FontWeight="Bold" 
                        FontSize="16" 
                        Grid.Column="0"/>
     
                
                <ListView Name="LViewBoquets"
                            Grid.Column="1">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:CheckItem></local:CheckItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
               
            <StackPanel
                        Grid.Column="2"
                        Orientation="Vertical">
                <TextBlock Text="{Binding User.FisrtName}" 
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding User.LastName}" 
                           TextWrapping="Wrap"/>
                <TextBlock Text="{Binding User.Phone}" 
                           TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel Grid.Column="3"
                        Orientation="Vertical">
                <TextBlock Text="{Binding Date}" 
                           FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalAmount}" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
